# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# 所有文件的默认设置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C/C++ 文件
[*.{c,h,cpp,hpp,cc,hh,cxx}]
indent_style = space
indent_size = 4
max_line_length = 100

# CMake 文件
[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 4

# Python 文件
[*.py]
indent_style = space
indent_size = 4

# Shell 脚本
[*.sh]
indent_style = space
indent_size = 2

# Markdown 文件
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

# YAML 文件
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON 文件
[*.json]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
